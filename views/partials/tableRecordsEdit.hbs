<article>
  <div class="record-container">
    <div class="activities-record">
      <div class="flex-container activities-header">
        <div class="flex-container activities-header-one">
          <div class="flex-container activity-title">
            <h3>ACTIVITIES</h3>
            <button id="myButtonActivityAdd" class="myButtonActivityAdd" data-popup-id="myPopupActivityAdd">
              <img src="../img/Add_ring_fill2.png" alt="Add Activity" class="img-add-activity" />
            </button>
            <form action="/insert-activity-database" method="POST" id="addFormActivity">
              <div id="myPopupActivityAdd" class="popup myPopupActivity">
                <div class="flex-container popup-content">
                  <span id="closeButton" class="close-button closePopup"
                    data-popup-id="myPopupActivityAdd">&times;</span>
                  <h1>ADD ACTIVITY</h1>
                  <div class="flex-container add-activities-container">
                    <div class="flex-container add-activities-holder">
                      <div class="flex-container inputsActivity">
                        <input type="text" id="recordActivityName" name="activitynameRecord[]"
                          placeholder="Activity Name" class="activityname-main add-activity-inputs" />
                        <input type="date" id="recordActivityDate" name="activitydateRecord[]"
                          class="activitydate add-activity-inputs" />
                        {{!-- <input type="text" id="activitynames" name="activitynameRecord[]"
                          placeholder="Activity Name" class="activityname-main add-activity-inputs" />
                        <input type="date" id="recordActivityDate" name="activitydateRecord[]"
                          class="activitydate add-activity-inputs" /> --}}
                      </div>
                    </div>
                    <div class="flex-container add-activities-container-button">
                      <button id="addMoreActivities" class="addMoreActivities" type="button">Add
                        More Activities</button>
                      <button id="confirmActivityButton" class="confirmActivityButton"
                        data-popup-id="myPopupActivityAdd" type="button">CONFIRM</button>
                    </div>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
        <div class="flex-container activities-header-two">
          <div class="sort-by">
            <div class="flex-container sort-by-container">
              <div class="sort-by-item">SORT BY</div>
              <div>
                <img src="../img/Group 30.png" alt="sort icon">
              </div>
            </div>
            <div class="dropdown-content">
              <a href="#">ACTIVITY NAME</a>
              <a href="#">DATE</a>
              <a href="#">ROLE</a>
              <a href="#">POINTS</a>
              <a href="#">OFFICER-IN-CHARGE</a>
            </div>
          </div>
          <div class="filter-by">
            <div class="flex-container filter-by-container">
              <div class="filter-by-item">FILTER BY</div>
              <div>
                <img src="../img/Group 30.png" alt="filter icon">
              </div>
            </div>
            <div class="dropdown-content dropdown-content-two">
              <a href="#">ACTIVITIES PARTICIPATED</a>
              <a href="#">ACTIVITIES MISSED</a>
            </div>
          </div>
          <div class="activity-searchspace">
            <div class="form-group">
              <input type="search" id="searchActivity" class="form-control" placeholder="Search...">
            </div>
            <span class="material-symbols-outlined" style="color:white;">search</span>
          </div>
        </div>
      </div>

      <!-- participation record table -->
      <div class="participation-record-table">
        <!-- activities table -->
        <table class="activities-table">
          <tr>
            <th>ACTIVITY NAME</th>
            <th>DATE</th>
          </tr>
          <tbody id="eventTableBody">
          </tbody>
        </table>
      </div>
    </div>

    <div class="attendance-record">
      <div class="flex-container attendance-header">
        <div class="flex-container activities-header-one">
          <div class="attendance-title">
            <h3>ATTENDANCE</h3>
          </div>
        </div>
        <div class="flex-container attendance-header-two">
          <div class="sort-by">
            <div class="flex-container sort-by-container">
              <div class="sort-by-item">
                SORT BY
              </div>
              <div>
                <img src="../img/Group 30.png" alt="sort icon">
              </div>
            </div>
            <div class="dropdown-content">
              <a href="#">DATE</a>
              <a href="#">AM</a>
              <a href="#">PM</a>
              <a href="#">POINTS</a>
              <a href="#">OFFICER-IN-CHARGE</a>
            </div>
          </div>
          <div class="filter-by">
            <div class="flex-container filter-by-container">
              <div class="filter-by-item">
                FILTER BY
              </div>
              <div>
                <img src="../img/Group 30.png" alt="filter icon">
              </div>
            </div>
            <div class="dropdown-content dropdown-content-two">
              <a href="#">MORNING ABSENCES</a>
              <a href="#">AFTERNOON ABSENCES</a>
            </div>
          </div>
          <div class="attendance-searchspace">
            <div class="form-group">
              <input type="search" id="searchAttendance" class="form-control" placeholder="Search...">
            </div>
            <span class="material-symbols-outlined" style="color:white;">
              search
            </span>
          </div>
        </div>
      </div>

      <!-- participation record table -->
      <div class="participation-record-table">
        <!-- attendance table -->
        <table class="attendance-table">
          <tr>
            <th>DATE</th>
          </tr>
          <tbody id="attendanceTableBody">
          </tbody>
        </table>
      </div>
    </div>
  </div>
</article>